// Platzieren Sie Ihre Einstellungen in dieser Datei, um die Standardeinstellungen zu Ã¼berschreiben.
{
    // Python linter conflict resolve
    "python.linting.pylintEnabled": false,
    //-----Vim Settings------
    //-----Linux compability----
    "files.eol": "\n",
    //------editor------
    "editor.fontFamily": "inconsolata",
    "editor.fontSize": 17,
    // --depricated -- "editor.wrappingColumn": 0,
    "editor.wordWrap": "on",
    "editor.scrollBeyondLastLine": false,
    "editor.insertSpaces": true,
    "editor.formatOnType": true,
    //------JavaScript------
    "jshint.enable": true,
    "javascript.validate.enable": false,
    "javascript.suggest.alwaysAllWords": true,
    "javascript.suggest.useCodeSnippetsOnMethodSuggest": true,
    //------files------
    "files.trimTrailingWhitespace": true,
    //------zoom------
    //"workbench.action.zoomIn": "Ctrl+.",
    //"workbench.action.zoomOut": "Ctrl+-",
    //"workbench.action.zoomReset": "Ctrl+,",
    //"terminal.integrated.shell.windows": "C:\\Windows\\sysnative\\bash.exe",
    "terminal.integrated.shell.windows": "C:\\Windows\\System32\\cmd.exe",
    "window.zoomLevel": 0,
    "editor.cursorStyle": "block",
    "editor.cursorBlinking": "solid",
    "workbench.welcome.enabled": false,
    "workbench.colorTheme": "Solarized Dark",
    "editor.minimap.enabled": true,
    "workbench.iconTheme": "easy-icons"
}